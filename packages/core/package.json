{
  "name": "@preset/core",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Enzo Innocenzi",
  "description": "Elegant, ecosystem-agnostic preset mechanism",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/preset/preset.git",
    "directory": "packages/core"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bugs": "https://github.com/preset/preset/issues",
  "homepage": "https://preset.dev",
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --external esbuild",
    "test": "vitest",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "esbuild": "^0.14.9",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "debug": "^4.3.3",
    "execa": "^6.0.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "mitt": "^3.0.0",
    "simple-git": "^2.48.0"
  }
}

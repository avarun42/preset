{
  "name": "@preset/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter ./packages run build",
    "lint": "eslint **/*.ts",
    "test": "pnpm -r --filter ./packages run test",
    "test:core": "pnpm -C ./packages/core run test",
    "cli": "esno ./packages/cli/src/cli.ts",
    "cli:build": "pnpm build && pnpm cli",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:serve": "pnpm -C docs run serve",
		"release": "bumpp packages/*/package.json --push --tag --commit \"release: v\""
  },
  "devDependencies": {
    "@innocenzi/eslint-config": "^0.7.1",
    "@preset/core": "workspace:*",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "bumpp": "^7.1.1",
    "eslint": "8.6.0",
    "esno": "^0.14.0",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4",
    "vite": "^2.7.12",
    "vitest": "^0.1.15"
  }
}
